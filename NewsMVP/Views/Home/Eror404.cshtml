
@{
    ViewData["Title"] = "Eror404";
}
<link rel="stylesheet" href="~/css/404Mode2.css" />

<section class="error-section">
    <div class="container">
        <div class="error-container">
            <div class="error-illustration">
                <div class="broken-page">
                    <div class="page-content">
                        <div class="page-header">
                            <div class="page-title"></div>
                            <div class="page-date"></div>
                        </div>
                        <div class="page-text"></div>
                        <div class="page-text"></div>
                        <div class="page-text"></div>
                        <div class="page-image"></div>
                        <div class="page-text"></div>
                        <div class="page-text"></div>
                    </div>
                    <div class="page-crack"></div>
                </div>
                <div class="page-piece page-piece-1">
                    <div class="page-content">
                        <div class="page-text"></div>
                        <div class="page-text"></div>
                    </div>
                </div>
                <div class="page-piece page-piece-2">
                    <div class="page-content">
                        <div class="page-text"></div>
                        <div class="page-text"></div>
                    </div>
                </div>
                <div class="magnifying-glass">
                    <div class="magnifying-handle"></div>
                </div>
                <div class="floating-elements">
                    <div class="floating-element"></div>
                    <div class="floating-element"></div>
                    <div class="floating-element"></div>
                    <div class="floating-element"></div>
                </div>
            </div>

            <h1 class="error-code">404</h1>
            <h2 class="error-title">صفحه مورد نظر یافت نشد!</h2>
            <p class="error-message">متأسفانه صفحه‌ای که به دنبال آن هستید وجود ندارد یا به آدرس دیگری منتقل شده است. می‌توانید از طریق جستجو یا بازگشت به صفحه اصلی، مطلب مورد نظر خود را پیدا کنید.</p>

            <div class="error-actions">
                <form class="error-search-form">
                    <input type="text" class="error-search-input" placeholder="جستجو در سایت...">
                    <button type="submit" class="error-search-btn">جستجو</button>
                </form>

                <div class="error-buttons">
                    <a asp-action="Index" class="btn btn-primary">بازگشت به صفحه اصلی</a>
                    <a asp-action="ContactUs" class="btn btn-outline">تماس با ما</a>
                </div>
            </div>

            <div class="suggested-links">
                <h3 class="suggested-title">شاید این صفحات مورد نظر شما باشد</h3>

                <div class="links-grid">
                    <a href="#" class="link-card">
                        <div class="link-icon">
                            <i class="fas fa-newspaper"></i>
                        </div>
                        <h4 class="link-title">آخرین اخبار</h4>
                        <p class="link-desc">جدیدترین اخبار و رویدادهای روز</p>
                    </a>

                    <a href="#" class="link-card">
                        <div class="link-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h4 class="link-title">اخبار اقتصادی</h4>
                        <p class="link-desc">تحلیل بازار و اخبار اقتصادی</p>
                    </a>

                    <a href="#" class="link-card">
                        <div class="link-icon">
                            <i class="fas fa-futbol"></i>
                        </div>
                        <h4 class="link-title">اخبار ورزشی</h4>
                        <p class="link-desc">نتایج مسابقات و اخبار ورزشی</p>
                    </a>

                    <a href="#" class="link-card">
                        <div class="link-icon">
                            <i class="fas fa-globe-asia"></i>
                        </div>
                        <h4 class="link-title">اخبار بین‌الملل</h4>
                        <p class="link-desc">رویدادهای مهم جهان</p>
                    </a>

                    <a href="#" class="link-card">
                        <div class="link-icon">
                            <i class="fas fa-theater-masks"></i>
                        </div>
                        <h4 class="link-title">اخبار فرهنگی</h4>
                        <p class="link-desc">رویدادهای فرهنگی و هنری</p>
                    </a>

                    <a href="#" class="link-card">
                        <div class="link-icon">
                            <i class="fas fa-microchip"></i>
                        </div>
                        <h4 class="link-title">علم و فناوری</h4>
                        <p class="link-desc">آخرین دستاوردهای علمی و فناوری</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/js/404Mode2.js"></script>